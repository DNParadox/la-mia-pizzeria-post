@{
    Layout = "_Layout";
    ViewData["Title"] = "Pagina pizza";
}

@model List<Pizza> 

@if(Model.Count() == 0){
    <h3 class="text-center">Al momento non ci sono pizze disponibili</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Foto</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Prezzo</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
                @foreach (Pizza Pizza in Model)
                {
                <tr>
                    <td>@Pizza.Id</td>
                    <td class="image">
                        <img class="myDimension" src="@Pizza.Image">
                    </td>
                    <td class="title">@Pizza.Title</td>
                    <td class="description">
                          
                        <button type="button" class="btn btn-primary">
                            <a href="@Url.Action("Detail",new {id = Pizza.Id})">Vai ai Dettagli</a>
                        </button>
                    </td>
                    <td class="price">
                            @Pizza.Price
                    </td>
                </tr>
                }
        </tbody>
        </tbody>
    </table>
}